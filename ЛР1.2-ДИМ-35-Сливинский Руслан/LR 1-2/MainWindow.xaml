<Window x:Class="LR_1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LR_1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddButton" Content="Добавить" Margin="5" Grid.Column="0" Height="50" Width="150" VerticalAlignment="Bottom" Click="AddButton_Click"/>
        
        <TextBox x:Name="InputTextBox" Margin="5" TextWrapping="Wrap" Grid.Column="0" Height="90" Width="150" VerticalAlignment="Top"/>

        <ListBox x:Name="ItemListBox" Margin="5" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
