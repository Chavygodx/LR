<Window x:Class="lab1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtA" Margin="5" Height="30" Width="90" Grid.Column="1" Grid.Row="0"/>
        <Label Content="A" Margin="5" VerticalAlignment="center" Grid.Column="0" Grid.Row="0"/>



        <TextBox x:Name="txtB"  Width="90" Height="30" Margin="5" Grid.Column="1" Grid.Row="2"/>
        <Label Content="B" Margin="5" Grid.Column="0" VerticalAlignment="center" Grid.Row="2"/>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="1" Grid.Row="1">
            <Button Content="+" Width="20" Height="20" Margin="2" Click="Operation_Click"/>
            <Button Content="-" Width="20" Height="20" Margin="2" Click="Operation_Click"/>
            <Button Content="*" Width="20" Height="20" Margin="2" Click="Operation_Click"/>
            <Button Content="/" Width="20" Height="20" Margin="2" Click="Operation_Click"/>
        </StackPanel>

        <TextBox x:Name="txtResult"  Width="80" Height="30" Margin="5" Grid.Column="3" Grid.Row="1"/>
        <Label Content="=" Margin="5" Height="25" Grid.Column="2" Grid.Row="1"/>

    </Grid>
</Window>
    
